<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.RequestRejectedFragment">

    <TextView
        android:id="@+id/request_rejected_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_rejected_title_text"
        android:textAlignment="center"
        android:textColor="@color/fareShare_black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/request_rejected_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_rejected_back_button_text"
        android:backgroundTint="@color/fareShare_yellow"
        android:textColor="@color/fareShare_black"
        app:cornerRadius="20dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spacer"
        app:layout_constraintTop_toBottomOf="@+id/request_rejected_title" />

    <Button
        android:id="@+id/request_rejected_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_rejected_cancel_button_text"
        android:backgroundTint="@color/fareShare_yellow"
        android:textColor="@color/fareShare_black"
        app:cornerRadius="20dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_rejected_title" />

    <Space
        android:id="@+id/spacer"
        android:layout_width="2dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_rejected_title" />

</androidx.constraintlayout.widget.ConstraintLayout>